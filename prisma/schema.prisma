// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  email       String    @unique
  name        String
  password    String    // 密码哈希
  phone       String?
  avatar      String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  lastLoginAt DateTime?
}

model RCIC {
  id          String    @id @default(cuid())
  email       String    @unique
  
  // 基础信息
  name        String    // 中文姓名
  nameEn      String    // 英文姓名
  password    String    // 密码哈希
  phone       String
  avatar      String?
  
  // 身份验证
  idDocumentUrl String  // 身份证件照片
  country     String    // 居住国家
  city        String    // 居住城市
  
  // 顾问等级
  level       String    // A/B/C
  
  // A类顾问字段（持牌顾问/律师）
  licenseNo   String?   // RCIC执照号
  organization String?  // 执业机构
  verificationLink String? // 执照查询链接
  licenseCertificateUrl String? // 执照证书照片
  
  // B类顾问字段（留学/签证顾问）
  yearsOfExperience String? // 从业年限
  serviceScope String?      // 服务范围
  pastCases    String?      // 过往案例
  
  // C类顾问字段（文案/辅助）
  specialties  String?      // 擅长领域
  workExperience String?    // 工作经验
  
  // 审核状态
  verificationStatus String @default("pending") // pending/approved/rejected
  rejectionReason String?   // 审核拒绝原因
  isActive    Boolean  @default(false) // 是否激活（审核通过后才能激活）
  
  // 时间戳
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  lastLoginAt DateTime?
  
  // 关联
  cases       Case[]
  messages    Message[]
}

model Case {
  id          String   @id @default(cuid())
  userId      String
  rcicId      String?
  type        String
  status      String
  formData    Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  submittedAt DateTime?
  
  rcic        RCIC?    @relation(fields: [rcicId], references: [id])
  messages    Message[]
}

model Message {
  id        String   @id @default(cuid())
  caseId    String
  senderId  String
  senderType String  // user/rcic
  content   String   @db.Text
  createdAt DateTime @default(now())
  
  case      Case     @relation(fields: [caseId], references: [id])
  rcic      RCIC?    @relation(fields: [senderId], references: [id])
}
